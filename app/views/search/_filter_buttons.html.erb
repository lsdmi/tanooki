<div class="flex flex-wrap gap-3">
  <%= button_to search_index_path, 
      method: :get,
      params: { search: params[:search], filter: 'all' },
      class: "px-4 py-2 rounded-lg text-sm font-semibold transition duration-300 border-0 cursor-pointer #{params[:filter] != 'video' && params[:filter] != 'fiction' && params[:filter] != 'blog' ? 'bg-cyan-700 dark:bg-rose-700 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}",
      data: { turbo_stream: "" } do %>
    Усе
  <% end %>
  <%= button_to search_index_path, 
      method: :get,
      params: { search: params[:search], filter: 'video' },
      class: "px-4 py-2 rounded-lg text-sm font-semibold transition duration-300 border-0 cursor-pointer #{params[:filter] == 'video' ? 'bg-cyan-700 dark:bg-rose-700 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}",
      data: { turbo_stream: "" } do %>
    Відео
  <% end %>
  <%= button_to search_index_path, 
      method: :get,
      params: { search: params[:search], filter: 'blog' },
      class: "px-4 py-2 rounded-lg text-sm font-semibold transition duration-300 border-0 cursor-pointer #{params[:filter] == 'blog' ? 'bg-cyan-700 dark:bg-rose-700 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}",
      data: { turbo_stream: "" } do %>
    Новини
  <% end %>
  <%= button_to search_index_path, 
      method: :get,
      params: { search: params[:search], filter: 'fiction' },
      class: "px-4 py-2 rounded-lg text-sm font-semibold transition duration-300 border-0 cursor-pointer #{params[:filter] == 'fiction' ? 'bg-cyan-700 dark:bg-rose-700 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}",
      data: { turbo_stream: "" } do %>
    Ранобе
  <% end %>
</div>
