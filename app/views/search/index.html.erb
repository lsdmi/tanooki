<section class="bg-white">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
          <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900">Результати Пошуку</h2>
          <% if @results.any? %>
            <%= tag.p "знайдено збігів за запитом: #{@results.size}", class: "font-light text-gray-500 sm:text-xl" %>
          <% else %>
            <%= tag.p "не знайдено збігів за запитом", class: "font-light text-gray-500 sm:text-xl" %>
          <% end %>
      </div>
      <% if @results.any? %>
        <div>
          <% @results.each do |result| %>
            <article class="p-6 bg-white rounded-lg border border-gray-200 shadow-md mb-2">
              <div class="flex justify-between items-center mb-5 text-gray-500">
                  <span class="bg-primary-100 text-primary-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded">
                      <svg class="mr-1 w-3 h-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 01-2.25 2.25M16.5 7.5V18a2.25 2.25 0 002.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 002.25 2.25h13.5M6 7.5h3v3H6v-3z"></path>
                      </svg>
                      Звістка
                  </span>
                  <%= tag.span "Опубліковано #{result.created_at.strftime("%d.%m.%Y")}", class: 'text-sm' %>
              </div>
              <%= tag.h2 result.title, class: 'mb-2 text-2xl font-bold tracking-tight text-gray-900' %>
              <%= tag.p result.description.to_plain_text.truncate(325), class: 'mb-5 font-light text-gray-500' %>
              <div class="flex justify-between items-center">
                  <div class="flex items-center space-x-4">
                  </div>
                  <%= link_to tale_path(result), class: 'inline-flex items-center font-medium text-primary-600 hover:underline' do %>
                    Читати далі
                    <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                  <% end %>
              </div>
          </article>
          <% end %>
        </div>
      <% else %>
        <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
          <%= image_tag "https://images.anime-pictures.net/966/96682eb6ef42cf746b308be9a27186c8.jpg?if=ANIME-PICTURES.NET_-_46593-1169x825-toradora-j.c.+staff-aisaka+taiga-takasu+ryuuji-white+background-couple.jpg" %>
        </div>
      <% end %>
  </div>
</section>