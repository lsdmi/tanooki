<% if @fictions.any? && (params[:filter] != 'video' && params[:filter] != 'blog' || params[:filter] == 'fiction') %>
  <%= turbo_stream.replace "fictions-section" do %>
    <%= render 'search/fictions_section', fictions: @fictions, pagy_fictions: @pagy_fictions %>
  <% end %>
<% end %>

