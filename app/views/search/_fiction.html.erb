<section class="z-10 relative ">
  <div class="gap-4 items-center pb-2 md:py-4 mx-4 2xl:mx-auto 2xl:pl-2 max-w-screen-2xl grid-cols-5 lg:grid lg:grid-cols-8 xl:gap-16">
    <div class="col-span-8 grid grid-cols-6 gap-4 xl:gap-8 self-start">
      <div class="md:col-span-2 hidden md:block">
        <div class="relative">
          <%= image_tag url_for(fiction.cover), class: 'hidden h-[24rem] mx-auto md:flex rounded-lg object-cover shadow-xl', alt: fiction.cover.blob.filename  %>
        </div>
      </div>
      <div class="text-gray-500 dark:text-gray-400 sm:text-xl col-span-6 md:col-span-4">
        <%= link_to fiction_path(fiction) do %>
          <%= tag.h2 fiction.title, class: 'my-2 text-2xl text-gray-900 dark:text-gray-100 xl:text-3xl -skew-x-12 font-bold md:text-3xl hover:underline' %>
        <% end %>

        <div class="inline-flex -skew-x-12">
          <p class="font-light text-xs sm:text-sm 2xl:text-base text-gray-500 dark:text-gray-400">перекладач:</p>
          <%= fiction.scanlators.map { |scanlator| link_to(scanlator.title, scanlator_path(scanlator), class: 'text-xs sm:text-sm 2xl:text-base font-extrabold tracking-tight text-emerald-800 dark:text-emerald-400 hover:underline hover:text-emerald-600 dark:hover:text-emerald-300 ml-1') }.join(', ').html_safe %>
        </div>

        <% if fiction.genres.any? %>
          <div class="mt-4">
            <div>
              <ul class="overflow-hidden break-words text-center text-left inline-block md:flex flex-wrap">
                <% fiction.genres.each do |genre| %>
                  <div class="relative inline-block pr-2 xl:p-0 xl:mx-1">
                    <h2 class="relative w-full text-center mb-1 2xl:mb-3">
                      <%= tag.span genre.name, class: "text-xs inline-block text-white dark:text-gray-100 font-bold leading-none px-4 py-2 relative uppercase z-10 bg-gradient-to-r from-teal-500 to-teal-600 hover:bg-gradient-to-br rounded-xl" %>
                    </h2>
                  </div>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <blockquote class="p-4 mt-2 mb-4 border-s-4 border-gray-300 dark:border-gray-600">
          <%= tag.p fiction.description, class: 'font-light text-sm sm:text-base whitespace-break-spaces italic leading-relaxed text-gray-900 dark:text-gray-100 line-clamp-8' %>
        </blockquote>
      </div>
    </div>
  </div>
</section>
