<%= link_to advertisement.resource, class: "relative block", aria: { label: advertisement.cover.blob.filename } do %>
  <div class="relative overflow-hidden rounded-lg shadow-lg aspect-[3/1]">
    <div class="relative w-full h-full">
      <!-- Loading placeholder with same aspect ratio -->
      <div class="absolute inset-0 flex items-center justify-center bg-gray-200 dark:bg-gray-700 rounded-lg">
        <div class="animate-pulse">
          <svg class="w-8 h-8 text-gray-400 dark:text-gray-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
          </svg>
        </div>
      </div>
      <%= video_tag url_for(advertisement.cover),
                    alt: advertisement.cover.blob.filename.to_s,
                    autoplay: true,
                    class: 'absolute object-cover inset-0 w-full h-full transition duration-300 transform hover:scale-105',
                    loop: true,
                    muted: true,
                    playsinline: true,
                    poster: url_for(advertisement.poster) %>
    </div>
  </div>
<% end %>
