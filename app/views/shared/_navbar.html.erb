<nav class="relative z-50 bg-white pt-2 shadow-xl lg:shadow-none mb-2 lg:mb-0">
  <div class="max-w-screen-xl mx-auto px-4 md:px-6">
    <div class="grid grid-cols-3">
      <div class="flex place-items-center mt-2">
        <%= link_to 'https://t.me/bakaInUa', class: 'inline-flex items-center p-1 text-sm font-medium rounded-lg', area: { current: 'page' } do %>
          <%= image_tag 'telegram.svg', class: 'h-6 sm:h-8 transform transition duration-500 hover:scale-110', alt: 'logo' %>
        <% end %>

