<div class="bg-gray-50 dark:bg-gray-900 font-sans">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 z-10 relative">
    <div class="mx-auto pt-8 sm:pt-10 pb-8 sm:pb-10">
      <div class="flex flex-col lg:flex-row gap-6 lg:gap-8">
        <!-- Main Content Section -->
        <div class="w-full lg:w-2/3 order-2 lg:order-1">
          <div class="bg-white dark:bg-gray-800 rounded-lg p-6 lg:p-8 shadow-sm border border-gray-200 dark:border-gray-700 relative overflow-hidden">
            <%= render 'shared/decorative_ornament' %>
            <div class="mb-6 relative z-10">
              <h1 class="drop-shadow text-xl sm:text-2xl lg:text-3xl font-extrabold text-gray-900 dark:text-gray-100 leading-none">
                <%= @bookshelf.title %>
              </h1>
            </div>
            <div id="fiction-list-page" data-controller="fiction-picker" class="relative z-10">
              <%= render partial: 'fiction_lists/dynamic_content', locals: { fictions: @fictions, pagy: @pagy } %>
            </div>
          </div>
        </div>

        <!-- Details Sidebar Section -->
        <div class="w-full lg:w-1/3 order-1 lg:order-2">
          <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700 relative overflow-hidden">
            <%= render 'shared/jellyfish_ornament' %>
            <p class="drop-shadow uppercase leading-5 text-gray-900 dark:text-gray-100 text-lg sm:text-xl lg:text-2xl font-extrabold mb-4 relative z-10">
              Деталі <span class="text-cyan-700 dark:text-rose-700">Полиці</span>
            </p>
            <div class="space-y-4 relative z-10">
              <div>
                <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Автор</span>
                <p class="text-sm text-gray-900 dark:text-gray-200 mt-1">
                  <%= link_to @bookshelf.user.name, profile_path(@bookshelf.user.sqid), class: 'hover:text-cyan-600 dark:hover:text-rose-600 transition-colors duration-200' %>
                </p>
              </div>
              <div>
                <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Опис</span>
                <p class="text-sm text-gray-700 dark:text-gray-300 mt-1 leading-relaxed">
                  <%= @bookshelf.description %>
                </p>
              </div>
            </div>
          </div>
          <div class="mt-6 relative">
            <%= render 'shared/decorative_ornament' %>
            <div class="relative z-10">
              <%= render 'shared/ads', advertisement: @advertisement %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
