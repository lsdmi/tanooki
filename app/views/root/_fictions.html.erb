<div class="overflow-x-auto mx-auto">
  <div class="flex flex-nowrap">
    <% fictions.each do |fiction| %>
      <div class="inline-block mr-3">
        <%= link_to fiction_path(fiction) do %>
          <div class="relative w-56 md:w-64 rounded-md">
            <%= image_tag url_for(fiction.cover), alt: fiction.cover.blob.filename.to_s, class: "h-80 md:h-96 w-56 md:w-64 rounded-lg object-cover" %>
            <div class="absolute top-0 right-0 bottom-0 left-0 w-full h-80 md:h-96 overflow-hidden bg-fixed opacity-0 hover:opacity-100 transition duration-300 ease-in-out bg-[rgba(251,251,251,0.2)] dark:bg-[rgba(30,41,59,0.6)]"></div>
          </div>
        <% end %>
        <%= link_to fiction_path(fiction), class: 'lg:leading-tight text-xs md:text-base lg:text-xs font-semibold text-stone-800 dark:text-gray-200 line-clamp-1 group-hover:text-cyan-700 dark:group-hover:text-rose-700 transition-colors duration-300 text-center' do %>
          <%= tag.h2 fiction.title, class: 'lg:leading-tight line-clamp-2 mt-2 mb-1 text-center text-base text-stone-800 dark:text-gray-200 font-bold tracking-tight hover:underline hover:text-cyan-800 dark:hover:text-rose-800' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
