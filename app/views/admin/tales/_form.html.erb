<%= simple_form_for tale, html: { class: "tale form" } do |f| %>
  <div class="mb-6">
    <%= f.input :title,
                input_html: {
                  autofocus: true,
                  class: "mt-1 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                },
                placeholder: "Заголовок...",
                label: "Заголовок"
              %>
    <% if tale.errors[:title].any? %>
      <p id="outlined_error_help" class="mt-2 text-xs text-red-600"><span class="font-medium">сталася помилка із заголовком звістки...</p>
    <% end %>
  </div>

  <%= f.label :cover, "Обкладинка" %>
  <div class="mb-6 grid grid-cols-2 gap-2 bg-slate-50">
    <div>
      <%= f.input :cover, type: "file", label: false, input_html: { class: 'm-10' } %>
    </div>
    <div>
      <%= image_tag tale.cover, class: "float-right max-w-xs" if tale.persisted? %>
    </div>
  </div>

  <%= f.rich_text_area :description,
              input_html: {
                autofocus: true
              },
              placeholder: "Зміст звістки...",
              label: false,
              class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500"
            %>
  <% if tale.errors[:description].any? %>
    <p id="outlined_error_help" class="mt-2 text-xs text-red-600"><span class="font-medium">сталася помилка зі змістом звістки...</p>
  <% end %>

  <div class="py-2 px-10 grid grid-cols-4">
    <div></div>
    <div>
      <%= f.submit "Надіслати", class: "float-right py-12 mt-1 content-center text-green-700 hover:text-white border border-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>
    </div>
    <div class="flex items-center mr-4">
      <%= f.input :highlight, as: :boolean, type: 'checkbox', label: false, input_html: { class: 'w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2' } %>
      <label for="inline-checkbox" class="ml-2 text-sm font-medium text-gray-900">Парадна</label>
    </div>
    <div></div>
  </div>
<% end %>