<section class="bg-gradient-to-br from-stone-100 to-stone-200 dark:from-gray-800 dark:to-gray-900 py-8 sm:py-12 md:py-16 relative overflow-hidden">
  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 md:mb-8">
      <div class="max-w-3xl w-full md:w-auto">
        <%= tag.h1 class: 'text-3xl sm:text-4xl md:text-5xl font-bold text-stone-800 dark:text-white mb-2 sm:mb-3 leading-tight' do %>
          <% if title_includes_rozdil?(chapter.title) %>
            <%= chapter.title.presence || chapter.display_title %>
          <% else %>
            <span class="text-stone-400 mr-2">Розділ <%= check_decimal(chapter.number) %> - </span>
            <%= chapter.title.presence || chapter.display_title %>
          <% end %>
        <% end %>
        <%= link_to fiction.title, fiction_path(fiction), class: "text-lg sm:text-xl text-stone-600 dark:text-gray-300 hover:text-stone-800 dark:hover:text-white transition duration-300 border-b-2 border-transparent hover:border-stone-800 dark:hover:border-white" %>
      </div>
      <div class="fixed z-10 bottom-4 left-4 lg:relative lg:bottom-auto lg:left-auto mt-4 lg:mt-0 flex items-center space-x-4 bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm lg:bg-transparent lg:dark:bg-transparent lg:backdrop-blur-none border border-stone-200 dark:border-gray-600 lg:border-none p-2 lg:p-0 rounded-tr-lg lg:rounded-none shadow-lg lg:shadow-none z-50">
        <% if chapter.scanlators.all?(&:convertable?) %>
          <div data-controller="epub-download" data-epub-download-url-value="<%= epub_download_path(chapter.content) %>">
            <button data-epub-download-target="button" data-action="click->epub-download#download" class="text-stone-600 dark:text-gray-300 hover:text-stone-900 dark:hover:text-white hover:bg-stone-100 dark:hover:bg-gray-700 hover:scale-110 transition-all duration-300 p-2 rounded-lg" title="Завантажити EPUB">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
            </button>
          </div>
        <% end %>
        <%= link_to edit_chapter_path(chapter), class: "text-stone-600 dark:text-gray-300 hover:text-stone-900 dark:hover:text-white hover:bg-stone-100 dark:hover:bg-gray-700 hover:scale-110 transition-all duration-300 p-2 rounded-lg", title: "Редагувати Розділ" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        <% end if current_user && current_user.admin? || current_user == chapter.user %>
        <button id="font-toggle" class="text-stone-600 dark:text-gray-300 hover:text-stone-900 dark:hover:text-white hover:bg-stone-100 dark:hover:bg-gray-700 hover:scale-110 transition-all duration-300 p-2 rounded-lg" title="Змінити Шрифт">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
        <button id="font-size-toggle" class="text-stone-600 dark:text-gray-300 hover:text-stone-900 dark:hover:text-white hover:bg-stone-100 dark:hover:bg-gray-700 hover:scale-110 transition-all duration-300 p-2 rounded-lg" title="Змінити Розмір">
          <svg class="h-6 w-6" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="currentColor"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m22 6-3-4-3 4h2v4h-2l3 4 3-4h-2V6zM9.307 4l-6 16h2.137l1.875-5h6.363l1.875 5h2.137l-6-16H9.307zm-1.239 9L10.5 6.515 12.932 13H8.068z"></path></g>
          </svg>
        </button>
        <button data-action="click->comments-toggle#toggle" class="text-stone-600 dark:text-gray-300 hover:text-stone-900 dark:hover:text-white hover:bg-stone-100 dark:hover:bg-gray-700 hover:scale-110 transition-all duration-300 p-2 rounded-lg" title="Приховати/Показати коментарі">
          <svg data-comments-toggle-target="icon" class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </button>
        <button id="jump-to-top" onclick="window.scrollTo({top: 0, behavior: 'smooth'})" class="text-stone-600 dark:text-gray-300 hover:text-stone-900 dark:hover:text-white hover:bg-stone-100 dark:hover:bg-gray-700 hover:scale-110 transition-all duration-300 p-2 rounded-lg lg:hidden" title="Перейти до початку">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
          </svg>
        </button>
      </div>
    </div>
    <div class="flex flex-wrap items-center text-stone-600 dark:text-gray-300 bg-white/50 dark:bg-gray-700/50 rounded-full px-3 sm:px-4 py-2 inline-block">
      <span class="mr-2 text-sm">Перекладачі:</span>
      <div class="flex flex-wrap gap-2">
        <% chapter.scanlators.each do |scanlator| %>
          <%= link_to scanlator_path(scanlator), class: "text-xs sm:text-sm font-medium bg-stone-200 dark:bg-gray-600 text-stone-700 dark:text-gray-200 px-2 sm:px-3 py-1 rounded-full hover:bg-stone-300 dark:hover:bg-gray-500 hover:text-stone-800 dark:hover:text-white transition duration-300" do %>
            <%= scanlator.title %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="absolute top-0 right-0 w-64 sm:w-96 h-64 sm:h-96 bg-stone-300 dark:bg-gray-600 rounded-full transform translate-x-1/3 -translate-y-1/3 opacity-20"></div>
  <div class="absolute bottom-0 left-0 w-48 sm:w-72 h-48 sm:h-72 bg-stone-300 dark:bg-gray-600 rounded-full transform -translate-x-1/3 translate-y-1/3 opacity-20"></div>
  <div class="absolute top-1/2 left-1/4 w-16 sm:w-20 h-16 sm:h-20 bg-stone-400 dark:bg-gray-500 rounded-full opacity-10 animate-pulse"></div>
  <div class="absolute bottom-1/4 right-1/3 w-12 sm:w-16 h-12 sm:h-16 bg-stone-400 dark:bg-gray-500 rounded-full opacity-10 animate-pulse" style="animation-delay: 1s;"></div>
</section>
