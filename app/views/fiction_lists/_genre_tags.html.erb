<% genres = genres.sample(5) %>
<% genres.each_with_index do |genre, i| %>
  <%= tag.span genre.name,
    class: "shadow-sm ring-1 ring-cyan-800 dark:ring-rose-800 bg-cyan-700 dark:bg-rose-700 text-white dark:text-gray-300 px-2 py-1 lg:py-2 rounded-md text-xs md:text-sm #{'hidden lg:inline' if i == 1}" %>
<% end %>