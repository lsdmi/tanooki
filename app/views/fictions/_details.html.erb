<div class="text-gray-500 sm:text-lg col-span-5 md:col-span-3 overflow-y-auto max-h-[26rem] md:max-h-[35rem] lg:max-h-[27rem] xl:max-h-[32rem] 2xl:max-h-[35rem]">
  <%= tag.h2 fiction.title, class: 'text-center my-2 text-2xl tracking-tight font-extrabold text-gray-900 md:text-3xl' %>

  <% if fiction.genres.any? %>
    <div class="mb-2 overflow-hidden break-words text-center">
      <% fiction.genres.each do |genre| %>
        <%= tag.p "##{genre.name}", class: 'inline-block tracking-widest leading-4 text-xs sm:text-sm font-semibold mr-2 whitespace-nowrap uppercase text-emerald-600' %>
      <% end %>
    </div>
  <% end %>

  <div class="grid gap-2 grid-cols-3 md:grid-cols-3 my-4 justify-center mr-2">
    <div class="flex">
      <div class="mr-2 shrink-0 flex flex-col justify-center">
        <%= image_tag 'author.svg', class: 'h-12 inline-block', alt: 'author' %>
      </div>
      <div class="flex flex-col">
        <p class="font-light text-xs sm:text-sm 2xl:text-base text-gray-500">автор</p>
        <%= tag.p fiction.author, class: 'text-xs sm:text-sm 2xl:text-base font-extrabold tracking-tight text-gray-900 line-clamp-1' %>
      </div>
    </div>
    <%= tag.div class: 'flex' do %>
      <div class="mr-2 shrink-0 flex flex-col justify-center">
        <%= image_tag 'translator.svg', class: 'h-12 inline-block', alt: 'translator' %>
      </div>
      <div class="flex flex-col justify-center">
        <p class="font-light text-xs sm:text-sm 2xl:text-base text-gray-500">перекладач</p>
        <% fiction.scanlators.each do |scanlator| %>
          <%= link_to scanlator.title, scanlator_path(scanlator), class: 'text-xs sm:text-sm 2xl:text-base font-extrabold tracking-tight text-emerald-900 line-clamp-1 text-emerald-700 hover:underline hover:text-emerald-600 inline-block' %>
        <% end %>
      </div>
    <% end if fiction.translator? %>
    <div class="flex">
      <div class="mr-2 shrink-0 flex flex-col justify-center">
        <%= image_tag 'status.svg', class: 'h-12 inline-block', alt: 'author' %>
      </div>
      <div class="flex flex-col justify-center">
        <p class="font-light text-xs sm:text-sm 2xl:text-base text-gray-500">переклад</p>
        <%= tag.p Fiction.statuses[fiction.status], class: 'text-xs sm:text-sm 2xl:text-base font-extrabold tracking-tight text-gray-900 line-clamp-1' %>
      </div>
    </div>
    <%= tag.div class: 'flex' do %>
      <div class="mr-2 shrink-0 flex flex-col justify-center">
        <%= image_tag 'chapter.svg', class: 'h-12 inline-block', alt: 'author' %>
      </div>
      <div class="mt-2 md:mt-1 flex flex-col justify-center">
        <p class="font-light text-xs sm:text-sm 2xl:text-base text-gray-500">розділів</p>
        <%= tag.p fiction.total_chapters.zero? ? fiction.chapters.size : "#{unique_chapters(fiction.chapters).size} / #{fiction.total_chapters}", class: 'text-xs sm:text-sm 2xl:text-base font-extrabold tracking-tight text-gray-900 line-clamp-1' %>
      </div>
    <% end %>
    <div class="flex">
      <div class="mr-2 shrink-0 flex flex-col justify-center">
        <%= image_tag 'views.svg', class: 'h-12 inline-block', alt: 'author' %>
      </div>
      <div class="flex flex-col justify-center">
        <p class="font-light text-xs sm:text-sm 2xl:text-base text-gray-500">переглядів</p>
        <%= tag.p fiction.views, class: 'text-xs sm:text-sm 2xl:text-base font-extrabold tracking-tight text-gray-900 line-clamp-1' %>
      </div>
    </div>
    <%= tag.div class: 'flex' do %>
      <div class="mr-2 shrink-0 flex flex-col justify-center">
        <%= image_tag 'calendar.svg', class: 'h-12 inline-block', alt: 'author' %>
      </div>
      <div class="flex flex-col justify-center">
        <p class="font-light text-xs sm:text-sm 2xl:text-base text-gray-500">оновлено</p>
        <%= tag.p "#{time_ago_in_words(fiction.chapters.order(created_at: :desc).first.created_at)} тому", class: 'text-xs sm:text-sm 2xl:text-base font-extrabold tracking-tight text-gray-900 line-clamp-1' %>
      </div>
    <% end if fiction.chapters.any? %>
  </div>

  <%= tag.p fiction.description, class: 'mb-4 font-light text-sm sm:text-base 2xl:text-lg whitespace-break-spaces' %>
</div>