<div class="text-gray-500 sm:text-lg col-span-5 md:col-span-3">
  <%= tag.h2 @fiction.title, class: 'mb-4 text-2xl tracking-tight font-extrabold text-gray-900 md:text-3xl' %>
  <%= tag.p @fiction.description, class: 'mb-4 font-light text-base lg:text-lg whitespace-break-spaces' %>
  <div class="grid gap-2 grid-cols-2 sm:grid-cols-3 md:grid-cols-2">
    <div class="flex">
      <div class="mr-4 shrink-0">
        <%= image_tag 'author.svg', class: 'h-14 inline-block', alt: 'author' %>
      </div>
      <div>
        <%= tag.p @fiction.author, class: 'text-base md:text-lg xl:text-xl font-extrabold tracking-tight text-gray-900' %>
        <p class="font-light text-sm md:text-base text-gray-500">Автор</p>
      </div>
    </div>
    <%= tag.div class: 'flex' do %>
      <div class="mr-4 shrink-0">
        <%= image_tag 'translator.svg', class: 'h-14 inline-block', alt: 'translator' %>
      </div>
      <div>
        <%= tag.p @fiction.translator, class: 'text-base md:text-lg xl:text-xl font-extrabold tracking-tight text-gray-900' %>
        <p class="font-light text-sm md:text-base text-gray-500">Перекладач</p>
      </div>
    <% end if @fiction.translator.present? %>
    <div class="flex md:col-span-2">
      <div class="mr-4 shrink-0">
        <%= image_tag 'status.svg', class: 'h-14 inline-block', alt: 'author' %>
      </div>
      <div>
        <%= tag.p Fiction.statuses[@fiction.status], class: 'text-base md:text-lg xl:text-xl font-extrabold tracking-tight text-gray-900' %>
        <p class="font-light text-sm md:text-base text-gray-500">Статус</p>
      </div>
    </div>
    <%= tag.div class: 'flex' do %>
      <div class="mr-4 shrink-0">
        <%= image_tag 'chapter.svg', class: 'h-14 inline-block', alt: 'author' %>
      </div>
      <div>
        <%= tag.p @fiction.total_chapters.zero? ? @fiction.chapters.size : "#{@fiction.chapters.size} / #{@fiction.total_chapters}", class: 'text-base md:text-lg xl:text-xl font-extrabold tracking-tight text-gray-900' %>
        <p class="font-light text-sm md:text-base text-gray-500">Кількість розділів</p>
      </div>
    <% end %>
    <div class="flex">
      <div class="mr-4 shrink-0">
        <%= image_tag 'views.svg', class: 'h-14 inline-block', alt: 'author' %>
      </div>
      <div>
        <%= tag.p @fiction.views, class: 'mb-1 text-base md:text-lg xl:text-xl font-extrabold tracking-tight text-gray-900' %>
        <p class="font-light text-sm md:text-base text-gray-500">Кількість переглядів</p>
      </div>
    </div>
    <%= tag.div class: 'flex md:col-span-2' do %>
      <div class="mr-4 shrink-0">
        <%= image_tag 'calendar.svg', class: 'h-14 inline-block', alt: 'author' %>
      </div>
      <div>
        <%= tag.p "#{time_ago_in_words(@fiction.chapters.order(created_at: :desc).first.created_at) } тому", class: 'mb-1 text-base md:text-lg xl:text-xl font-extrabold tracking-tight text-gray-900' %>
        <p class="font-light text-sm md:text-base text-gray-500">Оновлено востаннє</p>
      </div>
    <% end if @fiction.chapters.any? %>
  </div>
</div>