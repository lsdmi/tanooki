<div id="fiction_details" data-fiction-picker-target="frame" class="grid grid-cols-3 md:grid-cols-4 lg:grid-cols-3 gap-4 fade-in-active dark:bg-gray-800 rounded-lg">
  <div class="relative sm:h-64">
    <div class="absolute inset-0 flex items-center justify-center bg-gray-200 dark:bg-gray-700 rounded-md">
      <svg class="animate-spin h-8 w-8 text-gray-500 dark:text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </div>
    <%= link_to fiction_path(fiction), data: { turbo: false } do %>
      <%= image_tag url_for(fiction.cover),
        alt: fiction.cover.blob.filename.to_s,
        class: "w-full h-full object-cover rounded-md shadow-sm transition duration-300 transform hover:scale-105 opacity-0",
        loading: "lazy",
        data: {
          controller: "lazy-image",
          lazy_image_target: "image",
          lazy_image_url_value: url_for(fiction.cover)
        } %>
    <% end %>
  </div>

  <div class="col-span-2 md:col-span-3 lg:col-span-2 my-1">
    <div>
      <%= link_to fiction_path(fiction), data: { turbo: false }, class: 'group' do %>
        <h3 class="text-lg font-semibold text-stone-800 dark:text-gray-200 line-clamp-1 group-hover:text-stone-600 dark:group-hover:text-gray-400 transition-colors duration-300">
          <%= fiction.title %>
        </h3>
      <% end %>

        <% if fiction.genres.any? %>
          <div class="text-xs flex flex-wrap gap-2 mt-1">
            <% genres = fiction.genres.sample(4) %>
            <% genres.each_with_index do |genre, i| %>
              <%= tag.span genre.name,
                class: "shadow-sm ring-1 ring-stone-100 dark:ring-gray-600 bg-stone-300 dark:bg-gray-700 text-stone-700 dark:text-gray-300 p-1 rounded-md #{'hidden lg:inline' if i == 1}" %>
            <% end %>
          </div>
        <% end %>
    </div>

    <p class="text-stone-600 dark:text-gray-400 text-sm line-clamp-4 sm:line-clamp-6 whitespace-break-spaces my-2 sm:my-4"><%= fiction.description %></p>

    <%= link_to fiction_path(fiction), data: { turbo: false }, class: "shadow-sm ring-1 ring-stone-100 dark:ring-gray-600 inline-flex items-center gap-1 text-xs sm:text-sm bg-stone-800 dark:bg-gray-700 text-stone-100 dark:text-gray-200 font-bold py-2 px-2 sm:px-6 rounded-xl hover:bg-stone-700 dark:hover:bg-gray-600 transition duration-300" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"/>
      </svg>
      <span class="">Читати</span>
    <% end %>
  </div>
</div>
