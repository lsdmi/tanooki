<div class="h-full my-0 mx-auto lg:hidden mt-4">
  <%= render 'shared/divider_shiny_green', caption: 'Нові релізи' %>
  <div class="mx-auto w-[90%] grid grid-cols-4 gap-4">
    <% latest_updates.limit(8).each do |fiction| %>
      <%= render 'mobile_fiction', fiction: fiction %>
    <% end %>
  </div>
  <%= link_to hero_ad.resource, class: 'relative overflow-hidden h-auto', aria: { label: hero_ad.cover.blob.filename } do %>
    <%= video_tag url_for(hero_ad.cover),
                  alt: hero_ad.cover.blob.filename.to_s,
                  autoplay: true,
                  class: 'my-5 mx-auto object-cover h-60 w-[96%] rounded-lg',
                  loop: true,
                  muted: true,
                  playsinline: true,
                  poster: url_for(hero_ad.poster) %>
  <% end if hero_ad.present? %>
  <%= render 'shared/divider_shiny_green', caption: 'ТОП творів року' %>
  <div class="mx-auto w-[90%] grid grid-cols-4 gap-4">
    <% most_reads.limit(4).each do |fiction| %>
      <%= render 'mobile_fiction', fiction: fiction %>
    <% end %>
  </div>

  <div class="my-2"></div>
  <%= render 'shared/divider_shiny_green', caption: 'Популярне цього місяця' %>
  <div class="mx-auto w-[90%] grid grid-cols-4 gap-4">
    <% hot_updates.limit(4).each do |fiction| %>
      <%= render 'mobile_fiction', fiction: fiction %>
    <% end %>
  </div>

  <div class="my-2"></div>
  <%= render 'shared/divider_shiny_green', caption: 'Гарячі новинки' %>
  <div class="mx-auto w-[90%] grid grid-cols-4 gap-4">
    <% popular_novelty.limit(4).each do |fiction| %>
      <%= render 'mobile_fiction', fiction: fiction %>
    <% end %>
  </div>
</div>