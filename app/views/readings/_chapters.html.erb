<div class="relative z-10 space-y-6 p-8">
  <!-- Navigation Header -->
  <div class="mb-6">
    <!-- Mobile Navigation -->
    <div class="lg:hidden mb-4">
      <!-- Back Button -->
      <div class="flex items-center mb-3">
        <%= link_to readings_path, data: { turbo: false }, class: "inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-cyan-600 dark:hover:text-rose-400 transition-colors duration-200" do %>
          <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Назад до майстерні
        <% end %>
      </div>

      <!-- Fiction Title -->
      <h1 class="text-lg font-bold text-gray-900 dark:text-white mb-2 line-clamp-2">
        <%= fiction.title %>
      </h1>

      <!-- Quick Stats -->
      <div class="flex items-center space-x-4 text-xs text-gray-500 dark:text-gray-400">
        <span><%= pagy.count %> розділів</span>
        <span><%= fiction.views %> переглядів</span>
        <span><%= fiction.comments_count %> коментарів</span>
      </div>
    </div>

    <!-- Desktop Navigation -->
    <div class="hidden lg:block mb-6">
      <!-- Breadcrumb Navigation -->
      <nav class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400 mb-4">
        <%= link_to "Головна", root_path, class: "hover:text-cyan-600 dark:hover:text-rose-400 transition-colors duration-200", data: { turbo: false } %>
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
        <%= link_to "Майстерня", readings_path, class: "hover:text-cyan-600 dark:hover:text-rose-400 transition-colors duration-200", data: { turbo: false } %>
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
        <span class="text-gray-900 dark:text-white font-medium">Розділи</span>
      </nav>

      <!-- Fiction Context Header -->
      <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 shadow-sm">
        <div class="flex items-start space-x-4">
          <!-- Fiction Cover -->
          <div class="flex-shrink-0">
            <%= link_to fiction_path(fiction), data: { turbo: false } do %>
              <%= image_tag url_for(fiction.cover),
                  alt: fiction.title,
                  class: "w-20 h-24 rounded-lg object-cover shadow-sm border border-gray-200 dark:border-gray-600 hover:shadow-md transition-shadow duration-200" %>
            <% end %>
          </div>

          <!-- Fiction Info -->
          <div class="flex-1 min-w-0">
            <div class="flex items-start justify-between">
              <div class="flex-1 min-w-0">
                <%= link_to fiction_path(fiction), data: { turbo: false }, class: "block" do %>
                  <h1 class="text-2xl font-bold text-gray-900 dark:text-white hover:text-cyan-700 dark:hover:text-rose-400 transition-colors duration-200 mb-2 line-clamp-2">
                    <%= fiction.title %>
                  </h1>
                <% end %>

                <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500 dark:text-gray-400 mb-3">
                  <div class="flex items-center space-x-1">
                    <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <span><%= pagy.count %> розділів</span>
                  </div>
                  <div class="flex items-center space-x-1">
                    <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    <span><%= fiction.views %> переглядів</span>
                  </div>
                  <div class="flex items-center space-x-1">
                    <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                    <span><%= fiction.comments_count %> коментарів</span>
                  </div>
                </div>
              </div>

              <!-- Quick Actions -->
              <div class="flex items-center space-x-2">
                <!-- View Fiction Button -->
                <%= link_to fiction_path(fiction), data: { turbo: false }, class: "inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200" do %>
                  <svg class="h-4 w-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.25 12s3.75-7.5 9.75-7.5 9.75 7.5 9.75 7.5-3.75 7.5-9.75 7.5S2.25 12 2.25 12z" />
                    <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="1.5" fill="none"/>
                  </svg>
                  Переглянути
                <% end %>

                <!-- Edit Fiction Button -->
                <%= link_to edit_fiction_path(fiction.slug), data: { turbo: false }, class: "inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-cyan-600 dark:bg-rose-600 rounded-lg hover:bg-cyan-700 dark:hover:bg-rose-700 transition-colors duration-200" do %>
                  <svg class="h-4 w-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Редагувати
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if chapters.any? %>
    <!-- CTA Card -->
    <div class="col-span-2 rounded-lg border border-gray-200 bg-white p-6 text-center shadow-sm dark:bg-gray-800 relative overflow-hidden">
      <%= render 'shared/decorative_ornament' %>

      <div class="mx-auto h-20 w-20 rounded-full bg-cyan-100 dark:bg-rose-900/20 flex items-center justify-center mb-4 relative z-10">
        <svg class="h-10 w-10 text-cyan-600 dark:text-rose-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
      </div>
      <h3 class="mb-2 text-lg font-semibold leading-none text-gray-900 dark:text-white relative z-10">Додайте новий розділ!</h3>
      <p class="mb-4 text-gray-500 dark:text-gray-400 relative z-10">Створіть захоплююче продовження улюбленої історії!</p>
      <%= link_to new_chapter_path(fiction:), data: { turbo: false }, class: "inline-flex items-center justify-center rounded-lg bg-cyan-700 px-5 py-2.5 text-sm font-medium text-white hover:bg-cyan-800 focus:outline-none focus:ring-4 focus:ring-cyan-300 dark:bg-rose-700 dark:hover:bg-rose-800 dark:focus:ring-rose-800 transition-colors duration-200 relative z-10" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2 -ml-1" viewBox="0 0 20 20" fill="currentColor">
          <path d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" />
        </svg>
        Додати розділ
      <% end %>
    </div>

    <!-- Chapters List -->
    <div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:bg-gray-800">
      <!-- Desktop Table View -->
      <div class="hidden sm:block rounded-lg relative overflow-x-auto">
        <%= render 'shared/jellyfish_ornament' %>
        <table class="w-full divide-y divide-gray-200 text-left text-sm text-gray-900 dark:text-white">
          <thead class="bg-cyan-50 text-xs uppercase text-gray-700 dark:bg-rose-900/20 dark:text-gray-400">
            <tr>
              <th scope="col" class="whitespace-nowrap p-4 text-xs font-semibold uppercase text-gray-500 dark:text-gray-300">Розділ</th>
              <th scope="col" class="whitespace-nowrap p-4 text-xs font-semibold uppercase text-gray-500 dark:text-gray-300">Статистика</th>
              <th scope="col" class="whitespace-nowrap p-4 text-xs font-semibold uppercase text-gray-500 dark:text-gray-300">Дії</th>
            </tr>
          </thead>

          <tbody class="divide-y divide-gray-200">
            <% chapters.each do |chapter| %>
              <tr class="hover:bg-cyan-50 dark:hover:bg-rose-900/10 transition-colors duration-200">
                <th scope="row" class="whitespace-nowrap p-4 text-sm font-medium text-gray-900 dark:text-white">
                  <div class="flex items-center space-x-3">
                    <div class="h-10 w-10 rounded-lg bg-cyan-100 dark:bg-rose-900/20 flex items-center justify-center">
                      <svg class="h-5 w-5 text-cyan-600 dark:text-rose-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                    </div>
                    <div>
                      <a href="<%= chapter_path(chapter) %>" class="hover:text-cyan-700 dark:hover:text-rose-400 transition-colors duration-200 font-medium" data-turbo="false">
                        <%= chapter.display_title %>
                      </a>
                      <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                        Створено: <%= l(chapter.created_at, format: :short).downcase %>
                      </p>
                    </div>
                  </div>
                </th>
                <td class="p-4 text-sm text-gray-500 dark:text-gray-400">
                  <div class="space-y-1">
                    <div class="flex items-center space-x-2">
                      <svg class="h-4 w-4 text-cyan-600 dark:text-rose-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                      <span class="font-medium"><%= chapter.views %></span>
                      <span class="text-xs">переглядів</span>
                    </div>
                    <div class="flex items-center space-x-2">
                      <svg class="h-4 w-4 text-cyan-600 dark:text-rose-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                      </svg>
                      <span class="font-medium"><%= chapter.comments_count %></span>
                      <span class="text-xs">коментарів</span>
                    </div>
                  </div>
                </td>
                <td class="p-4 text-right">
                  <div class="flex items-center space-x-2">
                    <!-- View Button -->
                    <%= link_to chapter_path(chapter), data: { turbo: false }, class: "inline-flex h-8 w-8 items-center justify-center rounded-lg text-cyan-600 hover:text-cyan-700 dark:text-cyan-400 dark:hover:text-cyan-300 transition-colors duration-200" do %>
                      <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.25 12s3.75-7.5 9.75-7.5 9.75 7.5 9.75 7.5-3.75 7.5-9.75 7.5S2.25 12 2.25 12z" />
                        <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="1.5" fill="none"/>
                      </svg>
                    <% end %>

                    <!-- Edit Button -->
                    <%= link_to edit_chapter_path(chapter.slug), data: { turbo: false }, class: "inline-flex h-8 w-8 items-center justify-center rounded-lg text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors duration-200" do %>
                      <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    <% end %>

                    <!-- Delete Button -->
                    <%= sweetalert(
                      content_tag(:svg, content_tag(:path, nil, stroke_linecap: "round", stroke_linejoin: "round", stroke_width: "2", d: "M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"), class: "h-4 w-4", xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke: "currentColor"),
                      {
                        description: "Впевнені, що хочете видалити розділ?",
                        message: "",
                        tag_id: nil,
                        url: reading_path(chapter, page: pagy.page),
                        button_class: "inline-flex h-8 w-8 items-center justify-center rounded-lg text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 transition-colors duration-200"
                      }
                    ) %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Card View (Mobile Only) -->
      <div class="sm:hidden p-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <% chapters.each do |chapter| %>
          <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-4 shadow-sm hover:shadow-md transition-shadow duration-200">
            <!-- Header with icon and title -->
            <div class="flex items-start space-x-3 mb-3">
              <div class="h-10 w-10 rounded-lg bg-cyan-100 dark:bg-rose-900/20 flex items-center justify-center flex-shrink-0">
                <svg class="h-5 w-5 text-cyan-600 dark:text-rose-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <a href="<%= chapter_path(chapter) %>" class="block hover:text-cyan-700 dark:hover:text-rose-400 transition-colors duration-200 font-medium text-gray-900 dark:text-white" data-turbo="false">
                  <%= chapter.display_title %>
                </a>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                  Створено: <%= l(chapter.created_at, format: :short).downcase %>
                </p>
              </div>
            </div>

            <!-- Statistics -->
            <div class="flex items-center space-x-4 mb-3 text-sm">
              <div class="flex items-center space-x-1">
                <svg class="h-4 w-4 text-cyan-600 dark:text-rose-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                <span class="font-medium text-gray-900 dark:text-white"><%= chapter.views %></span>
                <span class="text-xs text-gray-500 dark:text-gray-400">переглядів</span>
              </div>
              <div class="flex items-center space-x-1">
                <svg class="h-4 w-4 text-cyan-600 dark:text-rose-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
                <span class="font-medium text-gray-900 dark:text-white"><%= chapter.comments_count %></span>
                <span class="text-xs text-gray-500 dark:text-gray-400">коментарів</span>
              </div>
            </div>

            <!-- Footer with actions -->
            <div class="flex items-center justify-end pt-3 border-t border-gray-100 dark:border-gray-700">
              <div class="flex items-center space-x-2">
                <!-- View Button -->
                <%= link_to chapter_path(chapter), data: { turbo: false }, class: "inline-flex h-8 w-8 items-center justify-center rounded-lg text-cyan-600 hover:text-cyan-700 dark:text-cyan-400 dark:hover:text-cyan-300 transition-colors duration-200" do %>
                  <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.25 12s3.75-7.5 9.75-7.5 9.75 7.5 9.75 7.5-3.75 7.5-9.75 7.5S2.25 12 2.25 12z" />
                    <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="1.5" fill="none"/>
                  </svg>
                <% end %>

                <!-- Edit Button -->
                <%= link_to edit_chapter_path(chapter.slug), data: { turbo: false }, class: "inline-flex h-8 w-8 items-center justify-center rounded-lg text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors duration-200" do %>
                  <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                <% end %>

                <!-- Delete Button -->
                <%= sweetalert(
                  content_tag(:svg, content_tag(:path, nil, stroke_linecap: "round", stroke_linejoin: "round", stroke_width: "2", d: "M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"), class: "h-4 w-4", xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke: "currentColor"),
                  {
                    description: "Впевнені, що хочете видалити розділ?",
                    message: "",
                    tag_id: nil,
                    url: reading_path(chapter, page: pagy.page),
                    button_class: "inline-flex h-8 w-8 items-center justify-center rounded-lg text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 transition-colors duration-200"
                  }
                ) %>
              </div>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>

    <!-- Pagination -->
    <% if pagy.pages > 1 %>
      <div class="pagy-nav p-4">
        <div class="flex justify-center">
          <%== pagy_nav(pagy) %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="rounded-lg border border-gray-200 bg-white p-8 text-center shadow-sm dark:bg-gray-800 relative overflow-hidden">
      <%= render 'shared/jellyfish_ornament' %>

      <div class="mx-auto h-16 w-16 rounded-full bg-cyan-100 dark:bg-rose-900/20 flex items-center justify-center mb-4 relative z-10">
        <svg class="h-8 w-8 text-cyan-600 dark:text-rose-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
