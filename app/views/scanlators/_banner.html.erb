<div role="status" class="relative">
  <div class="items-center justify-center w-full rounded-lg">
    <%= image_tag @scanlator.banner.present? ? url_for(@scanlator.banner) : 'scanlator_banner.webp', alt: 'scanlator banner', class: 'w-full h-40 sm:h-44 md:h-52 lg:h-56 object-cover rounded-lg border border-gray-200', height: '575' %>
  </div>
  <div class="absolute left-1/2" style="transform: translate(-50%, -50%);">
    <%= image_tag @scanlator.avatar.present? ? url_for(@scanlator.avatar) : 'scanlator_avatar.webp', alt: 'scanlator avatar', class: 'h-36 object-cover rounded-full border border-gray-200', height: '143.5', width: '143.5' %>
  </div>
</div>
