<section class="bg-gray-50 dark:bg-gray-900 z-10 relative min-h-screen">
  <div class="py-8 px-4 sm:px-6 md:px-12 lg:px-24 mx-auto lg:py-12" data-controller="dropzone">
    <!-- Header -->
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-3">Оновити Профіль Перекладача</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">Відредагуйте профіль, щоб він став ще кращим!</p>
    </div>

    <!-- Form Container -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 shadow-lg p-8">
      <%= simple_form_for @scanlator, as: :scanlator, url: scanlator_path(@scanlator), method: :put, html: { class: "form", multipart: true } do |f| %>
        <%= render 'form', scanlator: @scanlator, f: f %>
      <% end %>
    </div>
  </div>
</section>
