<section class="">
  <h2 class="text-lg sm:text-xl lg:text-2xl font-semibold text-stone-800 dark:text-gray-200 mb-4 sm:mb-6 pb-2 border-b border-stone-200 dark:border-gray-700">Коментарі</h2>

  <% if current_user || comments.any? %>
    <div class="space-y-4 sm:space-y-6">
      <!-- Comment Form -->
      <%= turbo_frame_tag "new_comment" do %>
        <%= simple_form_for comment, url: comments_path, method: :post do |f| %>
          <%= render "comments/new", comment: comment, commentable: commentable, f: f %>
        <% end %>
      <% end if current_user %>

      <!-- Comment List -->
      <%= turbo_frame_tag "comments" do %>
        <%= render comments %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-6 sm:py-8">
      <%= tag.p no_comments_prompt, class: 'text-sm sm:text-base text-stone-600 dark:text-gray-400 mb-4' %>
      <%= link_to 'Увійти, аби лишити коментар!', new_user_session_path, class: 'inline-block px-4 sm:px-6 py-2 text-sm sm:text-base bg-stone-600 dark:bg-gray-700 text-white rounded-full hover:bg-stone-700 dark:hover:bg-gray-600 transition duration-300 transform hover:scale-105' %>
    </div>
  <% end %>
</section>
