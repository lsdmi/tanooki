<%= turbo_stream.update "comment-content-#{@comment.id}" do %>
  <%= simple_form_for @comment, url: comment_path(@comment), method: :put, html: { class: "comment form mb-6" } do |f| %>
    <%= render "comments/new", comment: @comment, commentable: @commentable, f: f %>
  <% end %>
<% end %>
<%= turbo_stream.update "mobile-comment-content-#{@comment.id}" do %>
  <%= simple_form_for @comment, url: comment_path(@comment), method: :put, html: { class: "comment form mb-6" } do |f| %>
    <%= render "comments/new", comment: @comment, commentable: @commentable, f: f %>
  <% end %>
<% end %>
<%= turbo_stream.update "comment-reply-#{@comment.id}" do %>
  <%= render 'comments/actions', comment: @comment, commentable: @commentable %>
<% end %>
<%= turbo_stream.update "mobile-comment-reply-#{@comment.id}" do %>
  <%= render 'comments/actions', comment: @comment, commentable: @commentable %>
<% end %>
