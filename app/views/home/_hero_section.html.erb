<section class="bg-gray-50 mx-auto px-5 pt-10 shadow-lg">
    <div class="grid max-w-screen-2xl py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-8 lg:grid-cols-12">
        <div class="lg:mt-0 lg:col-span-6">
            <%= link_to tale_path(@highlight) do %>
                <%= image_tag @highlight.cover, class: "max-w-full h-auto rounded-3xl transform motion-safe:hover:rotate-2" %>
            <% end %>
            <div class="mr-auto place-self-center lg:col-span-5 mr-1 lg:mr-2">
                <p class="inline-block px-3 py-px my-4 text-xs font-semibold tracking-wider text-teal-900 uppercase rounded-full bg-teal-accent-400">Оновлення</p>
                <%= link_to tale_path(@highlight) do %>
                    <%= tag.h1 @highlight.title, class: 'hover:text-gray-700 text-gray-800 mb-4 font-light tracking-normal leading-none text-5xl text-center md:text-center' %>
                <% end %>
                <%= tag.p @highlight.description.to_plain_text.truncate(475), class: "text-justify mb-6 text-gray-500 lg:mb-6 md:text-lg lg:text-l" %>
            </div>
        </div>
        <div class="lg:mt-0 lg:col-span-6 lg:flex">
            <!-- Container for demo purpose -->
            <div class="container px-6 mx-auto">
                <!-- Section: Design Block -->
                <section class="text-gray-800 text-center md:text-left">
                    <h2 class="text-3xl font-bold mb-12 text-center">Головне</h2>

                    <% @top4.first(4).each_with_index do |tale, i| %>
                        <div class="flex flex-wrap mb-6 <%= 'border-b-2' unless i == 3 %>">
                            <div class="grow-0 shrink-0 basis-auto w-full md:w-4/12 px-3 mb-6 md:mb-0 ml-auto">
                                <div class="relative overflow-hidden bg-no-repeat bg-cover relative overflow-hidden bg-no-repeat bg-cover ripple rounded-lg mb-6" data-mdb-ripple="true" data-mdb-ripple-color="light">
                                    <%= render 'tales/cover_image', tale: tale %>
                                </div>
                            </div>

                            <div class="grow-0 shrink-0 basis-auto w-full md:w-9/12 xl:w-7/12 px-3 mb-6 md:mb-0 mr-auto">
                                <%= link_to tale_path(tale) do %>
                                    <%= tag.h5 tale.title, class: 'text-xl font-bold mb-3 hover:text-gray-600' %>
                                <% end %>
                                <%= tag.p tale.description.to_plain_text.truncate(100), class: "text-gray-500" %>
                            </div>
                        </div>
                    <% end %>
                </section>
                <!-- Section: Design Block -->
            </div>
            <!-- Container for demo purpose -->
        </div>
    </div>
</section>
