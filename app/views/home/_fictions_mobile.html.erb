<%= link_to hero_fictions_ad.resource, class: 'sm:hidden relative overflow-hidden h-0 z-50', aria: { label: hero_fictions_ad.caption } do %>
  <%= video_tag url_for(hero_fictions_ad.cover),
                alt: hero_fictions_ad.cover.blob.filename.to_s,
                autoplay: true,
                class: 'my-6 mx-auto object-cover h-80 w-[90%] rounded-md',
                loop: true,
                muted: true,
                onloadeddata: "this.parentElement.classList.remove('h-0'); this.parentElement.classList.add('h-auto'); this.classList.remove('opacity-0'); this.classList.add('opacity-100');",
                poster: url_for(hero_fictions_ad.poster) %>
<% end if hero_fictions_ad.present? %>