<%# Renders the Studio tab list using a helper and a partial for each tab item %>
<%# CSS classes for active/inactive tabs %>
<% active_classes   = "!bg-cyan-700 dark:!bg-rose-700 !text-white" %>
<% inactive_classes = "bg-gray-100 text-gray-500 dark:bg-gray-700 dark:text-gray-400 hover:bg-cyan-100 dark:hover:bg-rose-900 hover:text-cyan-700 dark:hover:text-rose-300" %>

<ul
  class="-mb-px grid grid-cols-2 flex-wrap gap-4 text-center text-sm font-medium lg:grid-cols-7"
  id="default-tab"
  role="tablist"
  data-controller="tabs"
  data-tabs-active-tab-value="<%= active_tab %>"
>
  <% studio_menu_items.each do |item| %>
    <%= render partial: "studio/tab_item", locals: { item: item, is_active: (active_tab == item[:id]), active_classes: active_classes, inactive_classes: inactive_classes, active_tab: active_tab } %>
  <% end %>
</ul>
