<section class="h-full gradient-form pt-4 pb-8 z-10">
  <div class="md:container md:shadow-2xl mx-auto grid max-w-7xl pl-4 grid-cols-12 relative">
    <div class="w-full place-self-center col-span-12 md:col-span-6">
      <div class="p-8 rounded-lg mx-auto">
        <h1 class="mb-3 sm:mb-4 md:mb-3 xl:mb-4 leading-10 text-2xl sm:text-4xl md:text-2xl lg:text-3xl xl:text-4xl">Ласкаво Просимо до Баки!</h1>
        <p class="leading-8 text-lg sm:text-2xl md:text-lg lg:text-xl xl:text-2xl text-gray-500 font-light">Вже маєте обліковий запис?
          <%= link_to 'Поринути до Світу Аніме', new_user_session_path, class: 'hover:underline text-emerald-700' %>
        </p>
        <%= simple_form_for(resource, as: resource_name, url: register_path, data: { turbo: false }) do |f| %>
          <%= f.input :avatar_id, as: :hidden, input_html: { value: Avatar.all.sample.id } %>

          <div class="grid grid-cols-2 gap-6 mt-2 sm:mt-3 md:mt-2 xl:mt-3">
            <div>
              <%= f.input :email,
                          id: 'email',
                          required: true,
                          autofocus: true,
                          label: "Електронна Адреса",
                          placeholder: "user@baka.in.ua",
                          input_html: {
                            autocomplete: "email",
                            class: "font-light text-base w-full p-2.5 md:p-2 lg:p-2.5 block rounded-lg border-2 leading-5 #{'border-red-500' if resource.errors[:email].any? }"
                          },
                          label_html: {
                            class: 'text-xs sm:text-2xl md:text-xs lg:text-base xl:text-2xl font-light my-4 block leading-5'
                          } %>
              <%= tag.span resource.errors[:email].uniq.to_sentence(two_words_connector: "", last_word_connector: ""), class: "flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1" if resource.errors[:email].any? %>
            </div>
            <div>
              <%= f.input :name,
                          id: 'name',
                          required: true,
                          autofocus: true,
                          label: "Прізвисько",
                          placeholder: "username",
                          input_html: {
                            autocomplete: "name",
                            class: "font-light text-base w-full p-2.5 md:p-2 lg:p-2.5 block rounded-lg border-2 leading-5 #{'border-red-500' if resource.errors[:name].any? }"
                          },
                          label_html: {
                            class: 'text-xs sm:text-2xl md:text-xs lg:text-base xl:text-2xl font-light my-4 block leading-5'
                          } %>
              <%= tag.span resource.errors[:name].join(''), class: "flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1" if resource.errors[:name].any? %>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-6 mt-2 sm:mt-3 md:mt-2 xl:mt-3">
            <div>
              <%= f.input :password,
                          id: 'password',
                          required: true,
                          autofocus: true,
                          label: "Пароль",
                          placeholder: "***********",
                          input_html: {
                            autocomplete: "current-password",
                            class: "font-light text-base w-full p-2.5 md:p-2 lg:p-2.5 block rounded-lg border-2 leading-5 #{'border-red-500' if resource.errors[:password].any? }"
                          },
                          label_html: {
                            class: 'text-xs sm:text-2xl md:text-xs lg:text-base xl:text-2xl font-light my-4 block leading-5'
                          } %>
              <%= tag.span resource.errors[:password].to_sentence(two_words_connector: "", last_word_connector: ""), class: "flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1" if resource.errors[:password].any? %>
            </div>
            <div>
              <%= f.input :password_confirmation,
                          id: 'password_confirmation',
                          required: true,
                          autofocus: true,
                          label: "Підтвердження Паролю",
                          placeholder: "***********",
                          input_html: {
                            autocomplete: "password_confirmation",
                            class: "font-light text-base w-full p-2.5 md:p-2 lg:p-2.5 block rounded-lg border-2 leading-5 #{'border-red-500' if resource.errors[:password_confirmation].any? }"
                          },
                          label_html: {
                            class: 'text-xs sm:text-2xl md:text-xs lg:text-base xl:text-2xl font-light my-4 block leading-5'
                          } %>
              <%= tag.span resource.errors[:password_confirmation].to_sentence(two_words_connector: "", last_word_connector: ""), class: "flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1" if resource.errors[:password_confirmation].any? %>
            </div>
          </div>
        <% end %>
        <%= render 'users/sessions/omniauth' %>
        <div class="space-y-reverse mt-5 sm:mt-6 md:mt-5 xl:mt-6 justify-between flex">
          <div></div>
          <%= link_to 'Забули пароль?', new_user_password_path, class: 'text-lg sm:text-2xl md:text-lg lg:text-xl xl:text-2xl leading-5 font-light hover:underline text-emerald-700' %>
        </div>
        <%= button_tag "Зареєструватися", form: 'new_user', class: "space-y-reverse uppercase w-full rounded-lg px-5 py-2 sm:py-3 md:py-2 xl:py-3 text-center text-lg sm:text-2xl md:text-lg lg:text-xl xl:text-2xl leading-5 font-light bg-emerald-700 text-white mt-6 transition ease-in-out m-0 hover:bg-emerald-800 hover:cursor-pointer" %>
      </div>
    </div>
    <div class="mr-auto place-self-center col-span-6 shadow-lg invisible md:visible">
      <%= image_tag 'registration.png', alt: 'registration', class: 'align-middle mx-auto flex rounded-lg' %>
    </div>
  </div>
</section>

