<section class="h-full gradient-form pt-4 pb-8 z-10">
  <div class="md:container md:shadow-2xl mx-auto grid max-w-7xl pl-4 grid-cols-12 relative">
    <div class="w-full place-self-center col-span-12 md:col-span-6">
      <div class="p-8 rounded-lg mx-auto">
        <h1 class="mb-3 sm:mb-4 md:mb-3 xl:mb-4 leading-10 text-2xl sm:text-4xl md:text-2xl lg:text-3xl xl:text-4xl text-gray-900 dark:text-gray-100">Вітаємо з поверненням!</h1>
        <p class="leading-8 text-lg sm:text-2xl md:text-lg lg:text-xl xl:text-2xl text-gray-500 dark:text-gray-400 font-light">
          Досі не з нами? Приєднуйтеся до світу аніме вже зараз!
          <%= link_to 'Зареєструватися', register_path, class: 'hover:underline text-emerald-700 dark:text-emerald-400' %>
        </p>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
          <div class="grid grid-cols-2 gap-6 mt-2 sm:mt-3 md:mt-2 xl:mt-3">
            <div>
              <%= f.input :email,
                          id: 'email',
                          required: true,
                          autofocus: true,
                          label: "Електронна Адреса",
                          placeholder: "user@baka.in.ua",
                          input_html: {
                            autocomplete: "email",
                            class: "text-base w-full p-2.5 md:p-2 lg:p-2.5 block rounded-lg border-2 leading-5 font-light dark:text-gray-100 dark:bg-gray-900 dark:border-gray-700"
                          },
                          label_html: {
                            class: 'text-sm sm:text-2xl md:text-sm lg:text-xl xl:text-2xl my-4 block leading-5 font-light dark:text-gray-400'
                          } %>
            </div>
            <div>
              <%= f.input :password,
                          id: 'password',
                          required: true,
                          autofocus: true,
                          label: "Пароль",
                          placeholder: "***********",
                          input_html: {
                            autocomplete: "current-password",
                            class: "text-base w-full p-2.5 md:p-2 lg:p-2.5 block rounded-lg border-2 leading-5 font-light dark:text-gray-100 dark:bg-gray-900 dark:border-gray-700"
                          },
                          label_html: {
                            class: 'text-sm sm:text-2xl md:text-sm lg:text-xl xl:text-2xl my-4 block leading-5 font-light dark:text-gray-400'
                          } %>
            </div>
          </div>
        <% end %>
        <%= render 'omniauth' %>
        <div class="space-y-reverse mt-5 sm:mt-6 md:mt-5 xl:mt-6 justify-between flex">
          <div></div>
          <%= link_to 'Забули пароль?', new_user_password_path, class: 'text-lg sm:text-2xl md:text-lg lg:text-xl xl:text-2xl leading-5 hover:underline text-emerald-700 dark:text-emerald-400 font-light' %>
        </div>
        <%= button_tag "Увійти", form: 'new_user', class: "space-y-reverse uppercase w-full rounded-lg px-5 py-2 sm:py-3 md:py-2 xl:py-3 text-center text-lg sm:text-2xl md:text-lg lg:text-xl xl:text-2xl leading-5 bg-emerald-700 text-white mt-6 transition ease-in-out m-0 hover:bg-emerald-800 hover:cursor-pointer font-light" %>
      </div>
    </div>
    <div class="mr-auto place-self-center col-span-6 shadow-lg invisible md:visible">
      <%= image_tag 'login.jpeg', alt: 'login', class: 'align-middle mx-auto flex rounded-lg' %>
    </div>
  </div>
</section>
