<header class="w-full relative mb-4 block">
  <%= tag.h1 publication.title, class: "text-gray-800 font-bold tracking-tight font-oswald w-full mr-0 text-4xl" %>
  <div class="mt-3 w-full relative">
    <div class="inline-flex w-12 relative">
      <%= image_tag url_for(publication.user.avatar.image), alt: publication.user.avatar.blob.filename.to_s, class: 'h-12 rounded-full' %>
    </div>
    <div class="inline-block relative text-sm ml-3.5 align-super mt-4">
      <div class="relative">
        <%= tag.span "Опубліковано: #{time_ago_in_words(publication.created_at)} тому", class: 'text-gray-400' %>
        <%= tag.div publication.user.name, class: 'text-gray-800 font-bold' %>
      </div>
    </div>
  </div>
</header>