<section class="bg-white">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center lg:mb-2 mb-1">
        <%= tag.h2 static_variables[:publication_index_header], class: 'mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900' %>
      </div>
      <% if publications.any? %>
        <div class="lg:mb-20 mb-10">
          <%= link_to "Створити", static_variables[:new_publication_path], class: "float-right mt-1 content-center text-green-700 hover:text-white border border-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>
        </div>
        <% publications.in_groups_of(2) do |group| %>
          <div class="grid gap-8 lg:grid-cols-2">
            <% group.each do |publication| %>
              <% if publication.present? %>
                <% variables = dynamic_variables(publication.slug) %>
                <article class="p-6 bg-white rounded-lg border border-gray-200 shadow-md mb-2">
                  <div class="items-center mb-5 text-gray-500">
                    <%= tag.span "Опубліковано #{publication.created_at.strftime("%d.%m.%Y")}", class: 'text-sm text-justify' %>
                    <div class="w-7 float-right">
                      <%= link_to publication_path(publication), data: { turbo_confirm: 'Певні, що прагнете видалити цю публікацію?', "turbo-method": :delete } do %>
                        <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="stroke-red-800">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"></path>
                        </svg>
                      <% end %>
                    </div>
                    <div class="w-7 float-right mr-2">
                      <%= link_to variables[:edit_publication_path] do %>
                        <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"></path>
                        </svg>
                      <% end %>
                    </div>
                  </div>
                  <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
                    <%= link_to publication.title, variables[:show_publication_path] %>
                  </h2>
                  <%= tag.p publication.description.to_plain_text.truncate(125), class: 'mb-5 font-light text-gray-500' %>
                </article>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <%= render 'publications/cta_create_publication' %>
      <% end %>
  </div>
</section>