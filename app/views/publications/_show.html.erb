<article class="block w-full float-left pl-2 xl:pl-0 mt-6">
 <div class="w-full relative">
    <div class="my-0 mx-auto lg:w-[1250px] h-full">
      <div class="relative w-full mx-0">
        <div class="relative float-left w-full -mr-96">
          <main class="mx-1 md:mr-96">
            <div class="relative float-left w-full">
              <div class="w-full relative mt-6">
                <%= render 'publications/header', publication: publication %>
              </div>
              <div class="mb-7 text-center w-full relative">
                <%= image_tag url_for(publication.cover), alt: publication.cover.blob.filename.to_s, class: "rounded-lg w-full h-auto", width: '862', height: '431' %>
              </div>
              <div class="w-full relative mb-8">
                <div id="publication-description" class="leading-6 w-full relative pr-2 md:pr-0 lead text-gray-700 leading-7 font-georgia text-lg">
                  <%= publication.description %>
                </div>
              </div>
              <%= render 'publications/related_tags', tgs: publication.tags.order(:name) %>
              <%= render 'comments/index' %>
              <%= render 'publications/more', more_tales: more_tales %>
            </div>
          </main>
          <aside class="sticky top-8 invisible md:visible float-right h-[45rem] mt-4">
            <div class="float-left relative ml-14 w-80">
              <%= render 'shared/videos', videos: videos %>
            </div>
          </aside>
        </div>
      </div>
    </div>
  </div>
</article>
