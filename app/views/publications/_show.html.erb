<article class="block w-full float-left bg-white pl-2 xl:pl-0">
 <div class="w-full relative">
    <div class="my-0 mx-auto lg:w-[1200px] h-full">
      <div class="relative w-full mx-0">
        <div class="relative float-left w-full -mr-96">
          <main class="mx-1 md:mr-96">
            <div class="relative float-left w-full">
              <div class="w-full relative mt-6">
                <%= render 'publications/header', publication: publication %>
              </div>
              <div class="mb-7 text-center w-full relative">
                <%= image_tag url_for(publication.cover), alt: publication.cover.blob.filename.to_s, class: "rounded-lg w-full h-auto" %>
              </div>
              <div class="w-full relative mb-8">
                <div id="publication-description" class="leading-6 w-full relative pr-2 md:pr-0 lead text-gray-700 leading-7 font-georgia text-lg">
                  <%= publication.description %>
                </div>
              </div>
              <%= render 'comments/index' if current_user || @comments.any? %>
              <%= render 'publications/more' %>
            </div>
          </main>
          <aside class="sticky top-24 invisible md:visible float-right h-[36rem]">
            <div class="float-left relative ml-14 w-80">
              <%= render 'shared/ads', advertisement: @advertisement %>
            </div>
          </aside>
        </div>
      </div>
    </div>
  </div>
</article>
